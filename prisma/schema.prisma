generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pants {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  category     String
  title        String
  price        Int
  length       Int
  waistline    String
  weight       Int
  material     String
  imageUrls    String[] @map("imageUrls")
  imageDetails String[] @map("imageDetails")
}
